{
  "pluginAlias": "SharpSerial",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Television Name",
              "type": "string",
              "required": true
            },
            "manufacturer": {
              "type": "string",
              "placeholder": "Sharp"
            },
            "serial": {
              "type": "string",
              "placeholder": "Unknown"
            },
            "model": {
              "type": "string",
              "placeholder": "Unknown"
            },
            "path": {
              "title": "Path to Serial Port",
              "type": "string",
              "placeholder": "/dev/ttyUSB0"
            },
            "inputs": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "required": true
                  },
                  "type": {
                    "title": "Type",
                    "type": "integer",
                    "required": true,
                    "oneOf": [
                      { "title": "Other", "enum": [0] },
                      { "title": "Home Screen", "enum": [1] },
                      { "title": "Tuner", "enum": [2] },
                      { "title": "HDMI", "enum": [3] },
                      { "title": "Composite Video", "enum": [4] },
                      { "title": "S-Video", "enum": [5] },
                      { "title": "Component Video", "enum": [6] },
                      { "title": "DVI", "enum": [7] },
                      { "title": "Airplay", "enum": [8] },
                      { "title": "USB", "enum": [9] },
                      { "title": "Application", "enum": [10] }
                    ]
                  },
                  "id": {
                    "title": "Input ID",
                    "description": "0 will be TV Tuner, 1-8 will be inputs",
                    "type": "integer",
                    "required": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
